<% layout('layouts/boilerplate')%>

<div class="container d-flex justify-content-center align-items-center mt-5 col-8 col-sm-12 col-md-8 col-lg-6 col-xl-6">
    <div class=" d-flex justify-content-center">
        <div class="">
            <div class="card shadow">

                <img style="height: 500px;"src="/register.gif"
                    alt="" class="card-img-top" loop=infinite />
                <div class="card-body">

                    <!-- FORM -->
                    <h5 class="card-title">Register</h5>
                    <form action="/register" method="POST" class="validated-form" novalidate>

                        <!-- Username -->
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" required autofocus>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label class="form-label" for="email">Email</label>
                            <input class="form-control" type="email" id="email" name="email" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <button class="btn btn-success btn-block">Register</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="/css/vertical.css">
