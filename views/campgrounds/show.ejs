<%- layout('layouts/boilerplate')%>

<div class="row">
    <div class="col-6 offset-3">
        <div class="card">
            <img src="<%= camp.image %> " class="card-img-top" alt="Campground Image">
            <div class="card-body">
                <h5 class="card-title"><%= camp.title %> </h5>
                <p class="card-text"><%= camp.description %></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%= camp.location %> </li>
                <li class="list-group-item">$<%= camp.price %>/night </li>
            </ul>
            <div class="card-body">
                <a class="card-link btn btn-warning" href="/campgrounds/<%= camp._id %>/edit ">Edit</a>
                <form class="d-inline" action="/campgrounds/<%= camp._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
            <!-- TODO FUNCTIONAL DATE ADDED -->
            <div class="card-footer text-muted">
                2 days ago
            </div>
        </div>

        <!-- Rating -->
        <h2>Leave a Review</h2>
        <form action="/campgrounds/<%= camp._id %>/reviews" method="POST" class="mb-6 validated-form" novalidate>
            <div class="mb-3">
                <label lass="form-label"  for="rating">Rating</label>
                <input type="range" class="form-range validated-form" min="1" max="5" name="review[rating]" id="review" required>
            </div>

            <div class="mb-3">
                <label class="form-label" for="body">Review</label>
                <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <button class="btn btn-success">Add Review</button>
        </form>

    </div>
</div>